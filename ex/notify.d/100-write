# Use write to notify users on TTYs.

case "$NR_SESSION" in
    /dev/tty*|/dev/pts*)
	echo "[$0] notify user $NR_USERNAME on $NR_SESSION" 1>&2
	{
	    echo
	    echo "The following list of processes are using obsolete binaries or libraries:"
	    echo
	    cat
	    echo
	    echo "Please consider to relogin or restart them."
	    echo
	} | write "$NR_USERNAME" "$NR_SESSION"
	exit 0;
	;;
    *)
	echo "[$0] skip session w/o tty" 1>&2

EOF
	exit 1;
	;;
esac
